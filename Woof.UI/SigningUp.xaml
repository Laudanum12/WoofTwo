<Page x:Class="Woof.UI.SigningUp"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Woof.UI"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="SigningUp">
    <Page.Background>
        <ImageBrush ImageSource="Images/backgrounds/рег.jpg"></ImageBrush>
    </Page.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Foreground="White" Margin="15" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Content="Welcome to Woof! Please enter your personal data to create an account!"
               FontFamily="Matura MT Script Capitals" FontSize="24" Cursor="IBeam"/>
        <TextBlock HorizontalAlignment="Center" Foreground="White" Name="fullnameTextBlock" Grid.Row="1" Grid.Column="0" FontFamily="Matura MT Script Capitals" FontSize="36">
            Full name
        </TextBlock>
        <TextBox Margin="10" Name="fullnameTextBox" Grid.Row="1" Grid.Column="1"/>
        <TextBlock Foreground="White" Name="emailTextBlock" HorizontalAlignment="Center" Grid.Row="1" Grid.Column="2" FontFamily="Matura MT Script Capitals" FontSize="36">
            Email
        </TextBlock>
        <TextBox Margin="10" Name="loginTextBox" Grid.Row="1" Grid.Column="3"/>
        <TextBlock Foreground="White" Name="pswrdTextBlock" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="0" FontFamily="Matura MT Script Capitals" FontSize="36">
            Password
        </TextBlock>
        <TextBox Margin="10" Name="pswrdTextBox" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2" Visibility="Hidden"/>
        <PasswordBox Name="pswrdPasswordBox" PasswordChar="*" Margin="10" Grid.Row="2" Grid.Column="1"/>
        <CheckBox Foreground="White" Margin="10" Name="pswrdCheckBox" Content="Show password" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" 
                  FontFamily="Matura MT Script Capitals" FontSize="20" Click="pswrdCheckBox_Click"/>
        <TextBlock Foreground="White" Name="cityTextBlock" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="2" FontFamily="Matura MT Script Capitals" FontSize="36">
            City
        </TextBlock>
        <ComboBox Grid.Row="2" Grid.Column="3" Margin="10" Name="cityComboBox" SelectionChanged="cityComboBox_SelectionChanged" Text="Choose your city"
                  IsEditable="True" IsReadOnly="True" StaysOpenOnEdit="True"/>
        <StackPanel Margin="10" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="signingupButton" Click="signingupButton_Click" Margin="10" Background="Black" Foreground="White" Content="Create an account" FontFamily="Matura MT Script Capitals" FontSize="22"/>
            <Button Name="cancelButton" Click="cancelButton_Click" Margin="10" Background="Black" Foreground="White" Content="Cancel" FontFamily="Matura MT Script Capitals" FontSize="22"/>
        </StackPanel>
    </Grid>
</Page>
