<Page x:Class="Woof.UI.DeathPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Woof.UI"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="DeathPage">
    <Page.Background>
        <ImageBrush ImageSource="Images/backgrounds/кладбище.jpg"></ImageBrush>
    </Page.Background>
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="Oops, your animal died :(" FontFamily="Matura MT Script Capitals" FontSize="48"/>
            <Button Name="tryagainButton" Click="tryagainButton_Click" Margin="0 0 20 0" Foreground="IndianRed" Background="MistyRose" Content="Try again" HorizontalAlignment="Right" FontFamily="Matura MT Script Capitals" FontSize="36"/>
        </StackPanel>
    </Grid>
</Page>
